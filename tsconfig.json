{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    // Temporarily disabled due to Mongoose v6 typing incompatibilities
    // Will be re-enabled in Phase 5 after upgrading to Mongoose v8
    // "noUncheckedIndexedAccess": true,
    // "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/config/*": ["config/*"],
      "@/styles/*": ["styles/*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/app/*": ["app/*"],
      "@/model/*": ["api/auth/lib/model/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
