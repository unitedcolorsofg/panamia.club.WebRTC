# Development/Testing Configuration
USE_MEMORY_SERVER=false
DEV_RECEIVER_EMAIL=your_dev_email@example.com

# Host Configuration
HOST_URL=http://localhost:3000
NEXT_PUBLIC_HOST_URL=http://localhost:3000

# Admin Users (comma-separated email addresses)
# Users listed here will have admin privileges in the application
ADMIN_EMAILS=admin1@example.com,admin2@example.com

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (optional)
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Apple OAuth (optional)
# Get credentials at: https://developer.apple.com/account/resources/identifiers/list/serviceId
APPLE_CLIENT_ID=your_apple_client_id_here
APPLE_CLIENT_SECRET=your_apple_client_secret_here

# Wikimedia OAuth (optional)
# Get credentials at: https://meta.wikimedia.org/wiki/Special:OAuthConsumerRegistration
WIKIMEDIA_CLIENT_ID=your_wikimedia_client_id_here
WIKIMEDIA_CLIENT_SECRET=your_wikimedia_client_secret_here

# Mastodon OAuth (optional)
# Create an application on your Mastodon instance
MASTODON_INSTANCE=https://mastodon.social
MASTODON_CLIENT_ID=your_mastodon_client_id_here
MASTODON_CLIENT_SECRET=your_mastodon_client_secret_here

# Email Magic Link Configuration
# SMTP server credentials for sending magic link emails
EMAIL_FROM=noreply@example.com
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_smtp_username
EMAIL_SERVER_PASSWORD=your_smtp_password

# Google reCAPTCHA v3 (for spam protection on email magic link sign-in)
# Get your keys at: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# OAuth Provider Availability (set to 'true' to enable each provider on sign-in page)
# These control UI visibility - buttons will be greyed out if not enabled
# You must also configure the corresponding CLIENT_ID and CLIENT_SECRET environment variables
NEXT_PUBLIC_GOOGLE_ENABLED=true
NEXT_PUBLIC_APPLE_ENABLED=false
NEXT_PUBLIC_WIKIMEDIA_ENABLED=false
NEXT_PUBLIC_MASTODON_ENABLED=false

# BunnyCDN Configuration (for image storage)
# Get credentials at: https://panel.bunny.net/
BUNNYCDN_STORAGE=your_storage_zone_name
BUNNYCDN_HOSTNAME=your_storage_hostname.b-cdn.net
BUNNYCDN_APIPASSWORD=your_bunnycdn_api_password
BUNNYCDN_CDNPATH=https://your_pull_zone.b-cdn.net

# Pusher Configuration (for mentoring WebRTC signaling)
# Get credentials at: https://dashboard.pusher.com/
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
NEXT_PUBLIC_PUSHER_CLUSTER=your_pusher_cluster

# Stripe Configuration (for payments)
# Get credentials at: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Brevo (formerly Sendinblue) Email Service
# Get API key at: https://app.brevo.com/settings/keys/api
BREVO_APIKEY=your_brevo_api_key
BREVO_SENDEREMAIL=noreply@example.com
BREVO_SENDERNAME=Your App Name
BREVO_ENV=DEV
